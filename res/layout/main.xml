<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="10dp">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="180dp" android:orientation="vertical">
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:id="@+id/et_email" android:layout_gravity="center" android:layout_marginTop="10dp"
                android:selectAllOnFocus="true"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:id="@+id/et_password" android:layout_gravity="center" android:layout_marginTop="10dp"
                android:password="true" android:selectAllOnFocus="true"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/btn_login" android:layout_gravity="center" android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_error" android:layout_gravity="center"/>
        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar" android:layout_gravity="center" android:layout_marginTop="20dp"
                android:indeterminate="false"/>
    </LinearLayout>
</LinearLayout>